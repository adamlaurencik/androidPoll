<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.AnswerActivity"
    android:id="@+id/content_layout_answer"
    tools:showIn="@layout/activity_answer" android:layout_marginTop="56dp">

    <LinearLayout android:id="@+id/upperLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#9400D3"
        xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="27sp"
            android:text=""
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/questionTextView"
            android:textColor="#FFFFFF"
            android:layout_below="@+id/skipButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lowerLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_below="@+id/upperLayout"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        xmlns:tools="http://schemas.android.com/tools">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop = "20dp"
            android:id="@+id/answer_list_view"></ListView>
    </LinearLayout>
</LinearLayout>