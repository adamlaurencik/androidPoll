<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.MenuActivity"
    tools:showIn="@layout/activity_menu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of category will be here"
        android:id="@+id/toAnswerButton"
        android:onClick="onCategoryClick"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Polls"
        android:id="@+id/myPollsButton"
        android:onClick="onMyPollsClick"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/toAnswerButton"
        android:layout_alignStart="@+id/toAnswerButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Poll"
        android:id="@+id/createPollButton"
        android:onClick="onCreateClick"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/toAnswerButton"
        android:layout_alignEnd="@+id/toAnswerButton" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoriesGridView"
        android:layout_below="@+id/toAnswerButton"
        android:layout_centerHorizontal="true"
        android:numColumns="2"
        android:layout_above="@+id/createPollButton" />
</RelativeLayout>