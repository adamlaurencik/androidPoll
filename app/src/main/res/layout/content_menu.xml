<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activities.MenuActivity"
    tools:showIn="@layout/activity_menu" >

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/categoriesGridView"
        android:layout_centerHorizontal="true"
        android:numColumns="2"
        android:layout_marginTop="56dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Polls"
        android:id="@+id/myPollsButton"
        android:onClick="onMyPollsClick"
        android:layout_marginLeft="64dp"
        android:layout_marginStart="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Poll"
        android:id="@+id/createPollButton"
        android:onClick="onCreateClick"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/myPollsButton"
        android:layout_toEndOf="@+id/myPollsButton"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />

</RelativeLayout>