<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Answer 1:"
        android:id="@+id/option_item_answer_text"
        android:layout_alignTop="@+id/option_item_answer_delete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:id="@+id/option_item_answer_edit_text"
        android:layout_weight="2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/option_item_answer_delete"
        android:layout_toStartOf="@+id/option_item_answer_delete" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/option_item_answer_delete"
        android:background="@android:drawable/ic_delete"
        android:layout_weight="0"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/option_item_answer_edit_text"
        android:layout_marginRight="10dp" />

</RelativeLayout>